<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/primaryColor">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="16dp"
            android:rowCount="3"
            android:background="@color/myTextColor">

            <!-- 9 boutons pour la grille -->
            <Button
                android:id="@+id/btn_0_0"
                style="@style/GridButton"
                />

            <Button
                android:id="@+id/btn_0_1"
                style="@style/GridButton" />

            <Button
                android:id="@+id/btn_0_2"
                style="@style/GridButton" />

            <Button
                android:id="@+id/btn_1_0"
                style="@style/GridButton" />

            <Button
                android:id="@+id/btn_1_1"
                style="@style/GridButton" />

            <Button
                android:id="@+id/btn_1_2"
                style="@style/GridButton" />

            <Button
                android:id="@+id/btn_2_0"
                style="@style/GridButton" />

            <Button
                android:id="@+id/btn_2_1"
                style="@style/GridButton" />

            <Button
                android:id="@+id/btn_2_2"
                style="@style/GridButton"
                 />

        </GridLayout>

    </LinearLayout>

</FrameLayout>
