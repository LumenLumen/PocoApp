<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:gravity="center"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

<!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myTextColor"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/dracaufeu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:src="@drawable/dracaufeu" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@id/dracaufeu"
                android:text="Multi"
                android:textColor="@color/primaryColor"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/titleText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_marginStart="15dp"
                android:layout_marginTop="75dp"
                android:layout_toEndOf="@id/dracaufeu"
                android:text="@string/multi_subtitle"
                android:textColor="@color/primaryColor"
                android:textSize="22sp"
                android:textStyle="normal" />
            <Button
                android:id="@+id/btnFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Conteneur du Fragment -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#191919"
        android:clickable="true"
        android:focusable="true"/>


</LinearLayout>